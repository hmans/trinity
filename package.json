{
  "name": "trinity-project",
  "private": true,
  "version": "0.2.0",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "postinstall": "preconstruct dev && manypkg check",
    "dev": "preconstruct dev",
    "build": "preconstruct build",
    "test": "jest",
    "ci": "preconstruct validate && manypkg check && yarn build && yarn test",
    "revade": "yarn dev && cd apps/revade && yarn dev",
    "spacerage": "yarn dev && cd apps/spacerage && yarn dev",
    "release": "yarn ci && yarn changeset publish"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": false,
    "arrowParens": "always",
    "printWidth": 80
  },
  "dependencies": {
    "@changesets/cli": "^2.22.0",
    "@manypkg/cli": "^0.19.1",
    "@preconstruct/cli": "^2.1.5",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.1.1",
    "@types/react": "^18.0.2",
    "@types/three": "^0.143.0",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3"
  }
}
